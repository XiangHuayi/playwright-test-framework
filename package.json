{
  "name": "bilibili-test-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npx playwright test",
    "test:report": "npx playwright test --reporter=html",
    "test:allure": "npx playwright test --reporter=allure-playwright",
    "allure:generate": "npx allure generate ./reports/allure-results --clean -o ./reports/allure-report",
    "allure:open": "npx allure open ./reports/allure-report",
    "test:allure:full": "npm run test:allure && npm run allure:generate && npm run allure:open",
    "clean:reports": "rm -rf ./reports/*",
    "clean:logs": "rm -rf ./logs/*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/mcp": "^0.0.52",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.3",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "winston": "^3.18.3"
  }
}
